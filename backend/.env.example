# YuvGO Backend Environment Variables

# Database
DATABASE_URL=postgresql://yuvgo:yuvgo_password@localhost:5433/yuvgo_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== IPAKYULIBANK E-COMM ====================
# Get these from IpakYuliBank merchant cabinet
# Documentation: https://ecom.ipakyulibank.uz/docs/api/

IPAKYULI_BASE_URL=https://ecom.ipakyulibank.uz/api
IPAKYULI_ACCESS_TOKEN=your-access-token-from-merchant-cabinet
IPAKYULI_CASHBOX_ID=your-cashbox-id

# Payment redirect URLs
PAYMENT_SUCCESS_URL=https://yuvgo.uz/payment/success
PAYMENT_FAIL_URL=https://yuvgo.uz/payment/fail

# ==================== NOTIFICATIONS ====================

# Firebase Cloud Messaging
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# SMS Provider (local Uzbekistan provider)
SMS_API_URL=https://sms-provider.uz/api/send
SMS_API_KEY=your-sms-api-key

# ==================== QR CODE ====================

QR_TOKEN_TTL_SECONDS=120
VISIT_COOLDOWN_HOURS=4

# ==================== ENVIRONMENT ====================

ENVIRONMENT=development
DEBUG=true

# ==================== RATE LIMITING ====================

RATE_LIMIT_PER_MINUTE=60
